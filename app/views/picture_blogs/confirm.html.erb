<h1>確認画面</h1>
<br>
<h3 id="message">以下の内容でツイートする。</h3>
<%= form_with(model: @picture_blog, url: pictures_path, local: true) do |form| %>
  <p>User: <%= @picture_blog.user.name %></p>
  <%= form.hidden_field :content %>
  <p>Content: <%= @picture_blog.content %></p>
  <%= form.hidden_field :image_cache %>
  <p>Image: <%= image_tag(@picture_blog.image.url) if @picture_blog.image && @picture_blog.image.url %></p>
  <%= form.submit "Post" %>
<% end %>
<%= form_with(model:@picture_blog, url:new_picture_blog_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "Back", name: "back" %>
<% end %>
